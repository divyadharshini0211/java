import java.util.Scanner;

public class MagicalLineup {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();  
        int a = sc.nextInt();  
        int b = sc.nextInt();  
        sc.close();


        int possiblePositions = (n - b) - (a + 1) + 1;

        
        if (possiblePositions < 0) {
            possiblePositions = 0;
        }

        System.out.println(possiblePositions);
    }
}
